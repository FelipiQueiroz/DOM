<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Counter</title>
    <style>
        button {
            font-size: 18px;
            padding: 10px 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<p>Contagem: <span id="counter">0</span></p>
<button onclick="incrementCounter()">Incrementar</button>

<script>
    var counter = 0; // Variável para armazenar o valor do contador

    function incrementCounter() {
        counter++; // Incrementa o contador em 1
        var counterSpan = document.getElementById("counter");
        counterSpan.textContent = counter; // Atualiza o valor do contador na página
    }
</script>

</body>
</html>
